{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["@types/node", "@nuxt/schema"]
  },
  "exclude": ["node_modules"],
  "include": [
    "./**/*.d.ts",
    "./**/*.d.ts",
    "./**/*.vue",
    ".nuxt/types/**/*.ts"
  ]
}
